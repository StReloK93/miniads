{
   "extends": "./tsconfig.json",
   "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
      "types": ["vite/client"],

      /* Alias */
      "moduleResolution": "bundler",
      "paths": {
         "@/*": ["./resources/application/*"],
         "@components/*": ["./resources/application/components/*"],
         "@pages/*": ["./resources/application/pages/*"],
         "@admin/*": ["./resources/admin/*"],
         "@shared/*": ["./resources/shared/*"]
      },

      /* Yordamchi */
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true /* Vite uchun tavsiya etiladi */,
      "useDefineForClassFields": true
   },
   "include": [
      "resources/application/**/*.ts",
      "resources/application/**/*.tsx",
      "resources/application/**/*.vue",
      "resources/application/**/*.d.ts",
      "resources/admin/**/*.ts",
      "resources/admin/**/*.tsx",
      "resources/admin/**/*.vue",
      "resources/admin/**/*.d.ts",
      "resources/shared/**/*.ts",
      "resources/shared/**/*.tsx",
      "resources/shared/**/*.vue",
      "resources/shared/**/*.d.ts",
      "components.d.ts"
   ]
}
